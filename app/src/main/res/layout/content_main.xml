<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivityLuncher"
    android:background="@drawable/blur_plane_bg">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Container"
        android:background="@drawable/layoutcorner"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextContainer"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Already A Member?Login"
                android:id="@+id/memberText"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:editable="false"
                android:elegantTextHeight="false"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/usernameContainer"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/emailTv"
                android:text="r@gmail.com"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Enter Your Email"
                android:background="@drawable/recttengle_corner"
                android:paddingLeft="10dp"
                android:textStyle="italic"
                android:alpha="0.7" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:id="@+id/passwordContainer"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordTv"
                android:text="123456"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="Password"
                android:background="@drawable/recttengle_corner"
                android:paddingLeft="10dp"
                android:textStyle="italic"
                android:alpha="0.7" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/loginContainer"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/loginBtn"
                android:background="@drawable/logincorner"
                android:textColor="#ffffff"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textSize="20dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/textforgotpassword"/>

    </LinearLayout>


          <!--  <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SocialButtonContainer"
                android:layout_below="@+id/Container"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">

            </LinearLayout>-->



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignupContainer"
            android:layout_below="@+id/Container"
            android:layout_centerHorizontal="true">

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerBtn"
        android:background="@drawable/registercorner"
        android:onClick="showZaire"
        android:textColor="#ffffff"
        android:layout_below="@+id/SocialButtonContainer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:id="@+id/facebook"
        android:src="@drawable/fb_button"
        android:padding="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/imagecorner"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/gplus_btn"
        android:padding="0dp"
        android:layout_weight="1"
        android:layout_marginRight="40dp"
        android:background="@drawable/imagecorner"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="120dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:id="@+id/forgotpassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Registred Email"
            android:gravity="center"
            android:textSize="22dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginTop="70dp"
            android:id="@+id/forgotemail"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="send"
            android:id="@+id/forgotsend"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="cancel"
            android:id="@+id/forgotcancel"/>


    </FrameLayout>


</FrameLayout>
